{
  "counterTypography": {
    "target": "ep_counter",
    "responsive": true,
    "hover": true,
    "options": [
      {
        "label": "Counter Typography",
        "control": "Typography",
        "attribute": "counterTypography",
        "defaults": {
          "desktop": {
            "font-size": "69px",
            "font-weight": "bold",
            "text-color": "#1e1e1e"
          }
        }
        
      }
    ]
  },
  "titleTypography": {
    "target": "ep_counter_title",
    "responsive": true,
    "hover": true,
    "options": [
      {
        "label": "Title Typography",
        "control": "Typography",
        "attribute": "titleTypography",
        "defaults": {
          "desktop": {
            "font-size": "19px",
            "text-color": "#1e1e1e"
          }
        }
      }
    ]
  },
  "counterAlignment": {
    "target": "ep_counter_wrapper",
    "responsive": true,
    "options": [
      {
        "label": "Alignment",
        "control": "ButtonGroup",
        "attribute": "alignment",
        "css": "align-items",
        "defaults": {
          "desktop": "center"
        },
        "hover": false,
        "props": {
          "options": [
            {
              "icon": "editor-alignleft",
              "value": "flex-start"
            },
            {
              "icon": "editor-aligncenter",
              "value": "center"
            },
            {
              "icon": "editor-alignright",
              "value": "flex-end"
            }
          ]
        }
      }
    ]
  }
 
}
